# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.yml]
indent_size = 2


[*.md]
trim_trailing_whitespace = true
insert_final_newline = true

[*.json]